menuconfig LTR329
	bool "LTR329 Light Sensor"
	depends on I2C
	help
	  Enable driver for LTR329 I2C-based light sensor.

if !HAS_DTS_I2C_DEVICE

config LTR329_DEV_NAME
	string "LTR329 device name"
	depends on LTR329
	default "lsm303c"

config LTR329_I2C_ADDR
	hex "LTR329 I2C address"
	depends on LTR329
	default 0x52
	help
	  I2C address of the LTR329 sensor.

config LTR329_I2C_MASTER_DEV_NAME
	string "I2C master where LTR329 chip is connected"
	depends on LTR329
	default "I2C_0"
	help
	  Specify the device name of the I2C master device to which LTR329 is
	  connected.

endif

menu "Attributes"
	depends on LTR329

config LTR329_GAIN
	int "Light sensor gain setting"
	default 1
	help
		Specify the light sensor gain setting.
		Valid values are 1, 2, 4, 8, 48, and 96.

config LTR329_INTEG_RATE
	int "Light sensor integration rate (ms)"
	default 100
	help
		Specify the light sensor integration rate setting in ms. Must be less
		than the sample rate. Valid values are 50, 100, 150, 200, 250, 300,
		350, and 400.

config LTR329_MEAS_RATE
	int "Light sensor sample rate (ms)"
	default 500
	help
		Specify the light sensor sample rate setting in ms. Must be greater
		than the integration rate. Valid values are 50, 100, 200, 500, 1000,
		and 2000.

endmenu
