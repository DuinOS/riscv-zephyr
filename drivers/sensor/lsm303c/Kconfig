menuconfig LSM303C
	bool "LSM303C I2C accelerometer, magnetometer, and temperature sensor"
	depends on I2C
	help
	  Enable driver for LSM303C I2C-based accelerometer, magnetometer, and
	  temperature sensor.

if !HAS_DTS_I2C_DEVICE

config LSM303C_DEV_NAME
	string "LSM303C device name"
	depends on LSM303C
	default "lsm303c"

config LSM303C_I2C_ADDR
	hex "LSM303C I2C address"
	depends on LSM303C
	default 0x3A
	help
	  I2C address of the LSM303C sensor.
	  Use 0x6A if the SA0 pin is pulled to GND or 0x6B if the SA0 pin
	  is pulled to VCC.

config LSM303C_I2C_MASTER_DEV_NAME
	string "I2C master where LSM303C chip is connected"
	depends on LSM303C
	default "I2C_0"
	help
	  Specify the device name of the I2C master device to which LSM303C is
	  connected.

endif

config LSM303C_ACCEL_ENABLE_X_AXIS
	bool "Enable accelerometer X axis"
	depends on LSM303C
	default y
	help
	  Enable/disable accelerometer X axis totally by stripping everything
	  related in driver.

config LSM303C_ACCEL_ENABLE_Y_AXIS
	bool "Enable accelerometer Y axis"
	depends on LSM303C
	default y
	help
	  Enable/disable accelerometer Y axis totally by stripping everything
	  related in driver.

config LSM303C_ACCEL_ENABLE_Z_AXIS
	bool "Enable accelerometer Z axis"
	depends on LSM303C
	default y
	help
	  Enable/disable accelerometer Z axis totally by stripping everything
	  related in driver.

config LSM303C_MAGN_ENABLE_X_AXIS
	bool "Enable magnetometer X axis"
	depends on LSM303C
	default y
	help
	  Enable/disable magnetometer X axis totally by stripping everything
	  related in driver.

config LSM303C_MAGN_ENABLE_Y_AXIS
	bool "Enable magnetometer Y axis"
	depends on LSM303C
	default y
	help
	  Enable/disable magnetometer Y axis totally by stripping everything
	  related in driver.

config LSM303C_MAGN_ENABLE_Z_AXIS
	bool "Enable magnetometer Z axis"
	depends on LSM303C
	default y
	help
	  Enable/disable magnetometer Z axis totally by stripping everything
	  related in driver.

config LSM303C_ENABLE_TEMP
	bool "Enable temperature"
	depends on LSM303C
	help
	  Enable/disable temperature totally by stripping everything related in
	  driver.

menu "Attributes"
	depends on LSM303C

config LSM303C_MAGN_FULLSCALE
	int "Gyroscope full-scale range"
	depends on LSM303C
	default 245
	help
	  Specify the default magnetometer full-scale range.
	  An X value for the config represents a range of +/- X degree per
	  second. Valid values are 245, 500 and 2000.

config LSM303C_MAGN_SAMPLING_RATE
	int "Output data rate"
	depends on LSM303C
	default 15
	help
	  Specify the default magnetometer output data rate expressed in samples
	  per second (Hz).
	  Data rates supported by the chip are 0, 15, 60, 119, 238, 476,
	  952.

config LSM303C_ACCEL_FULLSCALE
	int "Accelerometer full-scale range"
	depends on LSM303C
	default 2
	help
	  Specify the default accelerometer full-scale range.
	  An X value for the config represents a range of +/- X G. Valid values
	  are 2, 4, 8 and 16.

config LSM303C_ACCEL_SAMPLING_RATE
	int "Output data rate"
	depends on LSM303C
	default 10
	help
	  Specify the default accelerometer output data rate expressed in
	  samples per second (Hz).
	  Data rates supported by the chip are 0, 10, 50, 119, 238, 476, 952.

endmenu
